@model CoreShopping.Northwind.MvcWebUI.ProductListViewModel
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@addTagHelper "*,CoreShopping.Northwind.MvcWebUI"
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <table class="table table-striped">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
        </tr>
        @foreach (var product in Model.Products)
        {
    <tr>
        <td>@product.ProductName</td>
        <td>@product.UnitPrice</td>
        <td>@product.UnitsInStock</td>
        <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add to cart</a></td>
    </tr>
        }
    </table>
